{
    "extends": [
      "eslint-config-airbnb-base"
    ],
    "env": {
      "browser": true,
      "es6": true
    },
    "rules": {
      "no-loop-func": 0,
      "no-plusplus": 0,
      "arrow-body-style": 0,
      "consistent-this": ["error", "thiz"],
      "comma-dangle": 0,
      "no-unused-vars": ["error", {
        "vars": "all", "args": "none" }
      ],
      "prefer-template": 0,
      "prefer-const": [2, {
        "destructuring": "any",
        "ignoreReadBeforeAssign": true
      }],
      "space-before-function-paren": 0,
      "strict": 0,
      "import/no-unresolved": false,
      "import/extensions": [2, { "js": "ignorePackages" }],
      "class-methods-use-this":0
    },
    "plugins": [
      "json",
      "html"
    ],
    "settings": {
      "html/indent": "+2",
      "html/report-bad-indent": "error"
    },
    "globals": {
      "customElements": true,
      "HTMLImports": true,
      "Polymer": true
    }
  }
  