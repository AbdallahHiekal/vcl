.vclBreadcrumbNav
  & ol
    list-style: none
    list-style-type: none
    overflow: hidden
    padding: 0
    margin: 0
    margin-bottom: var(--block-elem-vertical-gap)
    & li
      float: left
      font-weight: bold
      font-size: 0.98em
      & a,
      & .vclBreadcrumbNavItemLabel
        color: var(--breadcrumb-label-color)
        display: inline-block
        & +.vclBreadcrumbNavDivider
          color: var(--breadcrumb-divider-color)
          display: inline-block
          padding-left: 0.2em
          padding-right: 0.2em
      & a:hover,
      & .vclBreadcrumbNavItemLabel:hover,
      & a:focus,
      & .vclBreadcrumbNavItemLabel:focus
        color: var(--breadcrumb-label-hover-color)
      &.vclSelected
        cursor: default
        background: transparent
        border: 0
        & a,
        & .vclBreadcrumbNavItemLabel
          color: var(--breadcrumb-label-selected-color)
