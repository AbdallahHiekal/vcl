@import "@vcl/theme"

.vclOverlayContainer
  cursor: default
  overflow: hidden
  position: relative
  & > .vclOverlayContent,
  & > .vclOverlay
    position: absolute
    overflow: hidden

.vclOverlay
  z-index: 10
  height: 100%
  width: 100%
  opacity: 0
  transition: all 0.2s ease-in-out 0s
  background-color: rgba(0, 0, 0, 0.7)
  color: #ffffff
  text-align: center
  right: 0
  left: 0
  top: 0
  bottom: 0
  &:hover
    opacity: 1
