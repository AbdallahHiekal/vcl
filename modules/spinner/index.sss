@import "@vcl/theme"
@import "@vcl/button"
@import "@vcl/button-group"
@import "@vcl/icogram"
@import "@vcl/icon"
@import "@vcl/input"
@import "@vcl/input-group"
@import "@vcl/flex-grid"

.spinner
  & .button-group.vertical
    width: calc(var(--input-elem-height) + 0.5em)
    height: 100%
    & .button
      height: calc(var(--input-elem-height) / 2)
    & > .button
      border-radius: 0
