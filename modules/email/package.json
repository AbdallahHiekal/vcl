{
  "name": "@vcl/email",
  "description": "Basic HTML email styling",
  "version": "0.3.0",
  "main": "package.json",
  "scripts": {
    "test": "VCL_NO_PIPE=1 vcl-preprocessor --verbose ./package.json ./build/test.css",
    "browsersync": "node_modules/.bin/browser-sync start --server --files \"demo\" \"build\" --index \"/build/index.html\" ",
    "build-demo": "node node_modules/@vcl/build-demo/index.js",
    "democss": "node_modules/.bin/ vcl-preprocessor demo.sss demo/demo.css",
    "start": "npm run build-demo &  npm run browsersync"
  },
  "style": "index.sss",
  "author": {
    "name": "n-fuse GmbH",
    "email": "info@n-fuse.co",
    "url": "www.n-fuse.co"
  },
  "contributors": [
    {
      "name": "Thomas Hoppe",
      "email": "thomas.hoppe@n-fuse.co"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@vcl/build-demo": "0.4.0-8",
    "browser-sync": "^2.26.3",
    "pre-commit": "^1.2.2"
  },
  "dependencies": {
    "normalize.css": "8.0.1",
    "@vcl/theme": "^0.3.0-3",
    "@vcl/layout-spans": "^0.3.0",
    "@vcl/list": "^0.3.0",
    "@vcl/print": "^0.3.0",
    "@vcl/size-modulation": "^0.3.0",
    "@vcl/sum-table": "^0.3.0",
    "@vcl/table": "^0.3.0",
    "@vcl/typography": "^0.3.0",
    "@vcl/utils": "^0.3.0"
  },
  "keywords": [
    "css",
    "vcl",
    "component",
    "email"
  ],
  "vcl": {
    "categories": [
      {
        "title": "Email",
        "itemPriority": 10,
        "priority": 200
      }
    ]
  }
}
