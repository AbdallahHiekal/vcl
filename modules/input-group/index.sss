@import "@vcl/theme"
@import "@vcl/input"


.vclInputGroup
  display: flex
  width: 100%
  flex: 1 1 auto
  margin-bottom: var(--form-control-vertical-gap)
  & > :not(:first-child)
    margin-left: -var(--input-border-width)
  & > .vclInput,
  & > .vclInputGroupEmb
    margin-bottom: 0
    &:focus
      z-index: 1
  & > .vclButton
    flex: 1 0 auto
    display: block
    height: auto
  & .vclInputGroupText
    display: flex
    align-items: center
    background-color: hsl(0, 0%, 92%)
    color: hsl(0, 0%, 20%)
    font-weight: normal
    border-color: var(--input-border-color)
    border-width: var(--input-border-width)
    border-style: solid

.vclInputGroup .vclInput,
.vclInputGroup select
  display: flex
  border-style: solid
  box-sizing: border-box
