    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@vcl/build-demo": "^0.7.0-alpha.1",
    "@vcl/preprocessor": "^0.7.0-alpha.1",
    "browser-sync": "^2.26.3",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@vcl/icogram": "^0.7.0-alpha.1",
    "@vcl/icon": "^0.7.0-alpha.1",
    "@vcl/theme": "^0.7.0-alpha.1"
