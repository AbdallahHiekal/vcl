@import "normalize.css"
@import "@vcl/theme"
@import "@vcl/typography"
@import "@vcl/button"
@import "@vcl/flex-layout"
@import "@vcl/icogram"
@import "@vcl/icon"

.vclBusyIndicator
  margin-left: auto
  margin-right: auto
  align-items: center
  & > .vclIcon
    display: block
  & > .vclText
    display: block
    width: 100%
    margin-top: 0.8em
    text-align: center
  &.vclLayoutHorizontal
    & > .vclText
      margin-top: 0
