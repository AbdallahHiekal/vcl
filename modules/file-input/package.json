{
  "name": "@vcl/file-input",
  "description": "File input for selecting one or multiple files via tap and drag-and-drop gestures",
  "version": "0.3.0",
  "main": "package.json",
  "scripts": {
    "test": "VCL_NO_PIPE=1 vcl-preprocessor --verbose ./package.json ./build/test.css",
    "browsersync": "node_modules/.bin/browser-sync start --server --files \"demo\" \"build\" --index \"/build/index.html\" ",
    "build-demo": "node node_modules/@vcl/build-demo/index.js",
    "start": "npm run browsersync & npm run build-demo"
  },
  "style": "index.sss",
  "author": {
    "name": "n-fuse GmbH",
    "email": "info@n-fuse.co",
    "url": "www.n-fuse.co"
  },
  "contributors": [
    {
      "name": "Thomas Hoppe",
      "email": "thomas.hoppe@n-fuse.co"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@vcl/build-demo": "^0.4.0-3",
    "@vcl/preprocessor": "^0.3.0-2",
    "browser-sync": "^2.24.7",
    "pre-commit": "^1.1.2"
  },
  "dependencies": {
    "normalize.css": "8.0.1",
    "@vcl/theme": "^0.3.0-1",
    "@vcl/typography": "^0.3.0",
    "@vcl/form-control-label": "^0.3.0",
    "@vcl/icogram": "^0.3.0",
    "@vcl/icon": "^0.3.0",
    "@vcl/font-awesome": "^0.3.0"
  },
  "keywords": [
    "css",
    "vcl",
    "component",
    "file-input"
  ],
  "vcl": {
    "categories": [
      {
        "title": "Form Controls",
        "itemPriority": 80,
        "priority": 70
      }
    ]
  }
