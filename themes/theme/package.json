{
  "name": "@vcl/theme",
  "description": "The VCL default theme",
  "version": "0.3.0-3",
  "main": "package.json",
  "scripts": {
    "test": "VCL_NO_PIPE=1 vcl-preprocessor --verbose ./package.json ./build/test.css",
    "browsersync": "node_modules/.bin/browser-sync start --server --files \"demo\" \"build\" --index \"/build/index.html\" ",
    "build-demo": "node node_modules/@vcl/build-demo/index.js",
    "democss": "node_modules/.bin/ vcl-preprocessor demo.sss demo/demo.css",
    "start": "npm run browsersync & npm run build-demo"
  },
  "style": "index.sss",
  "author": {
    "name": "n-fuse GmbH",
    "email": "info@n-fuse.co",
    "url": "www.n-fuse.co"
  },
  "contributors": [
    {
      "name": "Thomas Hoppe",
      "email": "thomas.hoppe@n-fuse.co"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "2.26.3",
    "normalize.css": "^8.0.1",
    "pre-commit": "^1.2.2",
    "@vcl/build-demo": "^0.4.0-8",
    "@vcl/preprocessor": "^0.3.0-8",
    "@vcl/typography": "^0.3.0"
  },
  "keywords": [
    "css",
    "vcl",
    "component",
    "default",
    "theme"
  ],
  "vcl": {
    "categories": [
      {
        "title": "Themes",
        "itemPriority": 10,
        "priority": 180
      }
    ]
  }
}
